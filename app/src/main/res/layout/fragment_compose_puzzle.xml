<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".fragments.ComposeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnPost"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/game_title"
                    android:importantForAutofill="no"
                    android:inputType="none|text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnCapture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:minHeight="32dp"
                        android:padding="8dp"
                        android:text="@string/camera"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btnGallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="32dp"
                        android:padding="8dp"
                        android:text="@string/gallery"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:ems="10"
                    android:hint="@string/notes"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:text="Notes" />

                <GridLayout
                    android:id="@+id/glRatings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <TextView
                        android:id="@+id/tvCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/condition"
                        android:textSize="18sp" />

                    <RatingBar
                        android:id="@+id/rbCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:numStars="5"
                        android:secondaryProgressTint="#00000000"
                        android:stepSize="0.1" />

                    <TextView
                        android:id="@+id/tvDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/difficulty"
                        android:textSize="18sp" />

                    <RatingBar
                        android:id="@+id/rbDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:numStars="5"
                        android:secondaryProgressTint="#00000000"
                        android:stepSize="0.1" />

                    <TextView
                        android:id="@+id/tvAgeRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/age_rating"
                        android:textSize="18sp" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:secondaryProgressTint="#00000000"
                        android:stepSize="0.1"
                        android:visibility="invisible" />

                    <Spinner
                        android:id="@+id/spAgeRating"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/tvNotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:text="@string/num_pieces"
                        android:textSize="18sp" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:secondaryProgressTint="#00000000"
                        android:stepSize="0.1"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/etPieces"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:hint="@string/of_pieces"
                        android:importantForAutofill="no"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tvWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:text="@string/width"
                        android:textSize="18sp" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:secondaryProgressTint="#00000000"
                        android:stepSize="0.1"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/etWidth"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:hint="@string/width_in_inches"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:text="@string/height"
                        android:textSize="18sp" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:secondaryProgressTint="#00000000"
                        android:stepSize="0.1"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/etHeight"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_row="5"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:hint="@string/hieght_in_inches"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal" />

                </GridLayout>

            </LinearLayout>

        </ScrollView>


        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnPost"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="@string/post" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>